<!DOCTYPE xml>
<mvc:View
	controllerName="ERPFrontendUI5.controller.navigation.StartPageTiles"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	
	<IconTabBar	id="iconTabBar" class="sapUiResponsiveContentPadding">
		<items>
			<IconTabFilter text="{i18n>navigation.tiles.hr}" key="hr">
				<Panel headerText="{i18n>navigation.tiles.hr.employee}">
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>navigation.tiles.hr.employee}"
						subheader="{i18n>navigation.object.create}" press="onEmployeeCreatePressed">
						<TileContent>
							<ImageContent src="sap-icon://add" />
						</TileContent>
					</GenericTile>
					
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>navigation.tiles.hr.employee}"
						subheader="{i18n>navigation.object.edit}" press="onEmployeeEditPressed">
						<TileContent>
							<ImageContent src="sap-icon://edit" />
						</TileContent>
					</GenericTile>
					
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>navigation.tiles.hr.employee}"
						subheader="{i18n>navigation.object.display}" press="onEmployeeDisplayPressed">
						<TileContent>
							<ImageContent src="sap-icon://display" />
						</TileContent>
					</GenericTile>
					
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>navigation.tiles.hr.employee}"
						subheader="{i18n>navigation.object.overview}" press="onEmployeeOverviewPressed">
						<TileContent>
							<ImageContent src="sap-icon://list" />
						</TileContent>
					</GenericTile>
				</Panel>
				
				<Panel headerText="{i18n>navigation.tiles.hr.department}">
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>navigation.tiles.hr.department}"
						subheader="{i18n>navigation.object.create}" press="onDepartmentCreatePressed">
						<TileContent>
							<ImageContent src="sap-icon://add" />
						</TileContent>
					</GenericTile>
					
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>navigation.tiles.hr.department}"
						subheader="{i18n>navigation.object.edit}" press="onDepartmentEditPressed">
						<TileContent>
							<ImageContent src="sap-icon://edit" />
						</TileContent>
					</GenericTile>
					
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>navigation.tiles.hr.department}"
						subheader="{i18n>navigation.object.display}" press="onDepartmentDisplayPressed">
						<TileContent>
							<ImageContent src="sap-icon://display" />
						</TileContent>
					</GenericTile>
					
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>navigation.tiles.hr.department}"
						subheader="{i18n>navigation.object.overview}" press="onDepartmentOverviewPressed">
						<TileContent>
							<ImageContent src="sap-icon://list" />
						</TileContent>
					</GenericTile>
				</Panel>
			</IconTabFilter>
			
			<IconTabFilter text="{i18n>navigation.tiles.materialManagement}" key="material">
				<Panel headerText="{i18n>navigation.tiles.materialManagement.material}">
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>navigation.tiles.materialManagement.material}"
						subheader="{i18n>navigation.object.create}" press="onMaterialCreatePressed">
						<TileContent>
							<ImageContent src="sap-icon://add" />
						</TileContent>
					</GenericTile>
					
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>navigation.tiles.materialManagement.material}"
						subheader="{i18n>navigation.object.edit}" press="onMaterialEditPressed">
						<TileContent>
							<ImageContent src="sap-icon://edit" />
						</TileContent>
					</GenericTile>
					
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>navigation.tiles.materialManagement.material}"
						subheader="{i18n>navigation.object.display}" press="onMaterialDisplayPressed">
						<TileContent>
							<ImageContent src="sap-icon://display" />
						</TileContent>
					</GenericTile>
					
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>navigation.tiles.materialManagement.material}"
						subheader="{i18n>navigation.object.overview}" press="onMaterialOverviewPressed">
						<TileContent>
							<ImageContent src="sap-icon://list" />
						</TileContent>
					</GenericTile>
				</Panel>
				
				<Panel headerText="{i18n>navigation.tiles.materialManagement.billOfMaterial}">
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>navigation.tiles.materialManagement.billOfMaterial}"
						subheader="{i18n>navigation.object.create}" press="onBillOfMaterialCreatePressed">
						<TileContent>
							<ImageContent src="sap-icon://add" />
						</TileContent>
					</GenericTile>
					
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>navigation.tiles.materialManagement.billOfMaterial}"
						subheader="{i18n>navigation.object.edit}" press="onBillOfMaterialEditPressed">
						<TileContent>
							<ImageContent src="sap-icon://edit" />
						</TileContent>
					</GenericTile>
					
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>navigation.tiles.materialManagement.billOfMaterial}"
						subheader="{i18n>navigation.object.display}" press="onBillOfMaterialDisplayPressed">
						<TileContent>
							<ImageContent src="sap-icon://display" />
						</TileContent>
					</GenericTile>
					
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>navigation.tiles.materialManagement.billOfMaterial}"
						subheader="{i18n>navigation.object.overview}" press="onBillOfMaterialOverviewPressed">
						<TileContent>
							<ImageContent src="sap-icon://list" />
						</TileContent>
					</GenericTile>
				</Panel>
			</IconTabFilter>
			
			<IconTabFilter text="{i18n>navigation.tiles.sales}" key="sales">
				<Panel headerText="{i18n>navigation.tiles.sales.salesOrder}">
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>navigation.tiles.sales.salesOrder}"
						subheader="{i18n>navigation.object.create}" press="onSalesOrderCreatePressed">
						<TileContent>
							<ImageContent src="sap-icon://add" />
						</TileContent>
					</GenericTile>
					
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>navigation.tiles.sales.salesOrder}"
						subheader="{i18n>navigation.object.edit}" press="onSalesOrderEditPressed">
						<TileContent>
							<ImageContent src="sap-icon://edit" />
						</TileContent>
					</GenericTile>
					
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>navigation.tiles.sales.salesOrder}"
						subheader="{i18n>navigation.object.display}" press="onSalesOrderDisplayPressed">
						<TileContent>
							<ImageContent src="sap-icon://display" />
						</TileContent>
					</GenericTile>
					
					<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>navigation.tiles.sales.salesOrder}"
						subheader="{i18n>navigation.object.overview}" press="onSalesOrderOverviewPressed">
						<TileContent>
							<ImageContent src="sap-icon://list" />
						</TileContent>
					</GenericTile>
				</Panel>
			</IconTabFilter>
			
			<IconTabFilter text="{i18n>navigation.tiles.procurement}" key="procurement">
				<Text text="!Einkauf" />
			</IconTabFilter>
			<IconTabFilter text="{i18n>navigation.tiles.finance}" key="finance">
				<Text text="!Finanzen" />
			</IconTabFilter>
		</items>
	</IconTabBar>
</mvc:View>