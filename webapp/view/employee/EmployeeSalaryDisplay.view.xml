<!DOCTYPE xml>
<mvc:View
	controllerName="ERPFrontendUI5.controller.employee.EmployeeSalaryDisplay"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	
	<Page showHeader="false">
		<Toolbar>
			<Button type="Back" press=".onBackPress" />
			<Title id="toolbarTitle" text="{i18n>employeeSalaryDisplay.header}" level="H3" titleStyle="H3"/>
		</Toolbar>

		<content>
			<f:Form id="salaryForm" editable="false">
				<f:layout>
					<f:ResponsiveGridLayout
						labelSpanXL="3"
						labelSpanL="3"
						labelSpanM="3"
						labelSpanS="12"
						adjustLabelSpan="false"
						emptySpanXL="4"
						emptySpanL="4"
						emptySpanM="4"
						emptySpanS="0"
						columnsXL="1"
						columnsL="1"
						columnsM="1"
						singleContainerFullSize="false" />
				</f:layout>
				
				<f:formContainers>
					<f:FormContainer>
						<f:formElements>
							<f:FormElement label="{i18n>employeeSalaryDisplay.monthlySalary}">
								<f:fields>
									<ObjectNumber binding="{/employee/data/salaryData/}"
										number="{
												parts:[{path:'monthlySalary'}],
												type: 'sap.ui.model.type.Currency',
												formatOptions: {showMeasure: false}
											}"
										unit="EUR" emphasized="false"/>							
								</f:fields>
							</f:FormElement>
	
							<f:FormElement label="{i18n>employeeSalaryDisplay.lastChange}">
								<f:fields>
									<Label text="{path: '/employee/data/salaryData/salaryLastChange', formatter: '.formatter.wsDateFormatter'}" />
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>
				</f:formContainers>
			</f:Form>
		</content>
	</Page>
</mvc:View>