<mvc:View
	controllerName="ERPFrontendUI5.controller.App"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:tnt="sap.tnt"
	xmlns:f="sap.f"
	xmlns:core="sap.ui.core">
	
	<!-- Links ein MenÃ¼ und rechts eine Content-Area: 
	https://openui5.hana.ondemand.com/entity/sap.f.ShellBar/sample/sap.f.sample.ShellBarWithSplitApp -->
	<tnt:ToolPage id="toolPage">
		<!-- Application header -->
		<tnt:header>
			<f:ShellBar title="Micha's ERP">
			</f:ShellBar>
		</tnt:header>
		
		<!-- Navigation menu -->
		<tnt:sideContent>
			<tnt:SideNavigation>
				<tnt:NavigationList items="{path: '/navigation', templateShareable : false}">
					<tnt:NavigationListItem text="{title}" icon="{icon}" expanded="{expanded}" items="{path: 'items', templateShareable : false}" key="{key}">
						<tnt:NavigationListItem text="{title}" key="{key}">
						</tnt:NavigationListItem>
					</tnt:NavigationListItem>
				</tnt:NavigationList>
			</tnt:SideNavigation>
		</tnt:sideContent>
		
		<!-- Content area -->
		<tnt:mainContents>
			<NavContainer id="pageContainer" initialPage="startPage">
				<pages>
					<ScrollContainer id="startPage">
						<Text text="{/label}"/>
					</ScrollContainer>
					<ScrollContainer>
					</ScrollContainer>
				</pages>
			</NavContainer>
		</tnt:mainContents>
	</tnt:ToolPage>
</mvc:View>