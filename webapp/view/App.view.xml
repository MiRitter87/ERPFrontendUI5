<mvc:View
	controllerName="ERPFrontendUI5.controller.App"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:tnt="sap.tnt"
	xmlns:f="sap.f"
	xmlns:core="sap.ui.core">
	
	<!-- Links ein Menü und rechts eine Content-Area: 
	https://openui5.hana.ondemand.com/entity/sap.f.ShellBar/sample/sap.f.sample.ShellBarWithSplitApp -->
	<tnt:ToolPage id="toolPage">
		<!-- Application header -->
		<tnt:header>
			<f:ShellBar title="Micha's ERP">
			</f:ShellBar>
		</tnt:header>
		
		<!-- Navigation menu -->
		<tnt:sideContent>
			<tnt:SideNavigation expanded="true"  itemSelect="onItemSelect">
				<tnt:NavigationList>
					<tnt:NavigationListItem text="{i18n>navigation.employee}" icon="sap-icon://employee" expanded="true" key="employee">
						<tnt:NavigationListItem text="{i18n>navigation.object.create}" key="employeeCreate"/>
						<tnt:NavigationListItem text="{i18n>navigation.object.change}" key="employeeChange"/>
						<tnt:NavigationListItem text="{i18n>navigation.object.display}" key="employeeDisplay"/>
						<tnt:NavigationListItem text="{i18n>navigation.object.overview}" key="employeeOverview"/>
					</tnt:NavigationListItem>
				</tnt:NavigationList>
			</tnt:SideNavigation>
		</tnt:sideContent>
		
		<!-- Content area -->
		<tnt:mainContents>
			<NavContainer id="pageContainer" initialPage="startPage">
				<pages>
					<ScrollContainer id="startPage">
						<Text text="Ich bin die Startseite"/>
					</ScrollContainer>
					
					<ScrollContainer id="employeeCreate">
						<Text text="Mitarbeiter anlegen"/>
					</ScrollContainer>
					
					<ScrollContainer id="employeeChange">
						<Text text="Mitarbeiter ändern"/>
					</ScrollContainer>
					
					<ScrollContainer id="employeeDisplay">
						<mvc:XMLView viewName="ERPFrontendUI5.view.employee.EmployeeDisplay"/>
					</ScrollContainer>
					
					<ScrollContainer id="employeeOverview">
						<Text text="Mitarbeiter Übersicht"/>
					</ScrollContainer>
				</pages>
			</NavContainer>
		</tnt:mainContents>
	</tnt:ToolPage>
</mvc:View>